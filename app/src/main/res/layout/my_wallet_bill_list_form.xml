<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:background="@drawable/news_list_back_radius_form"
    android:orientation="horizontal">

    <com.example.smartcity30.utils.ImageViewRadiusFormUtil
        android:id="@+id/iv_my_wallet_bill_change_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@mipmap/revenue" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_wallet_bill_app_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="AppTpye : Park"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_my_wallet_bill_change_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="2022-10-30 09:23:14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_wallet_bill_change_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="+1000"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

</LinearLayout>